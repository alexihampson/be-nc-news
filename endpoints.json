{
  "/api": {
    "GET": {
      "description": "serves up a json representation of all the available endpoints of the api",
      "responseCode": 200
    }
  },
  "/api/topics": {
    "GET": {
      "description": "serves an array of all topics",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "topics": [{ "slug": "football", "description": "Footie!" }]
      }
    },
    "POST": {
      "description": "Adds a new topic",
      "queries": [],
      "exampleBody": {
        "slug": "cats",
        "description": "Description of the topic..."
      },
      "responseCode": 201,
      "exampleResponse": {
        "topic": {
          "slug": "cats",
          "description": "Description of the topic..."
        }
      }
    }
  },
  "/api/topics/:slug": {
    "GET": {
      "description": "Serves an object containing the topic as specified by the slug provided",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "topic": {
          "slug": "cats",
          "description": "Not dogs"
        }
      }
    },
    "PATCH": {
      "description": "Updates the description of the given topic",
      "queries": [],
      "exampleBody": {
        "description": "Very cute!"
      },
      "responseCode": 200,
      "exampleResponse": {
        "topic": {
          "slug": "cats",
          "description": "Very cute!"
        }
      }
    }
  },
  "/api/articles": {
    "GET": {
      "description": "serves an array of all articles",
      "queries": ["topic", "sort_by", "order", "limit", "p"],
      "responseCode": 200,
      "exampleResponse": {
        "total_count": 420,
        "articles": [
          {
            "title": "Seafood substitutions are increasing",
            "topic": "cooking",
            "author": "johnsmith",
            "body": "Text from the article..",
            "created_at": "2020-11-03T09:12:00.000Z",
            "comment_count": 15,
            "votes": 0,
            "article_id": 5
          }
        ]
      }
    },
    "POST": {
      "description": "Adds a new article",
      "queries": [],
      "exampleBody": {
        "author": "lurker",
        "title": "Test Article",
        "body": "This is a test",
        "topic": "cats"
      },
      "responseCode": 201,
      "exampleResponse": {
        "article": {
          "author": "johnsmith",
          "article_id": 5,
          "title": "Seafood substitutions are increasing",
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 10
        }
      }
    }
  },
  "/api/articles/:article_id": {
    "GET": {
      "description": "Serves an object containing the article as specified by the ID provided",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "article": {
          "author": "johnsmith",
          "article_id": 5,
          "title": "Seafood substitutions are increasing",
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 0,
          "comment_count": 15
        }
      }
    },
    "PATCH": {
      "description": "Updates the value of the votes for the given article ID",
      "queries": [],
      "exampleBody": {
        "inc_votes": 10
      },
      "responseCode": 200,
      "exampleResponse": {
        "article": {
          "author": "johnsmith",
          "article_id": 5,
          "title": "Seafood substitutions are increasing",
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 10,
          "comment_count": 15
        }
      }
    },
    "DELETE": {
      "description": "Removes article provided",
      "queries": [],
      "responseCode": 204
    }
  },
  "/api/articles/:article_id/comments": {
    "GET": {
      "description": "serves an array of all comments linked to the given article",
      "queries": ["limit", "p"],
      "responseCode": 200,
      "exampleResponse": {
        "total_count": 420,
        "comments": [
          {
            "comment_id": 12,
            "votes": 5,
            "created_at": "2020-11-03T09:12:00.000Z",
            "author": "johnsmith",
            "body": "Text from the comment..."
          }
        ]
      }
    },
    "POST": {
      "description": "Adds a new comment linked to the given article",
      "queries": [],
      "exampleBody": {
        "username": "johnsmith",
        "body": "Text from the comment..."
      },
      "responseCode": 201,
      "exampleResponse": {
        "comment": {
          "comment_id": 25,
          "votes": 0,
          "created_at": "2020-11-03T09:12:00.000Z",
          "author": "johnsmith",
          "body": "Text from the comment..."
        }
      }
    }
  },
  "/api/comments/:comment_id": {
    "GET": {
      "description": "Serves an object containing the comment as specified by the ID provided",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "comment": {
          "comment_id": 25,
          "votes": 0,
          "created_at": "2020-11-03T09:12:00.000Z",
          "author": "johnsmith",
          "body": "Text from the comment..."
        }
      }
    },
    "PATCH": {
      "description": "Updates the value of the votes for the given comment",
      "queries": [],
      "exampleBody": { "inc_votes": 10 },
      "responseCode": 200,
      "exampleResponse": {
        "comment": {
          "comment_id": 12,
          "votes": 15,
          "created_at": "2020-11-03T09:12:00.000Z",
          "author": "johnsmith",
          "body": "Text from the comment..."
        }
      }
    },
    "DELETE": {
      "description": "Removes comment provided",
      "queries": [],
      "responseCode": 204
    }
  },
  "/api/users": {
    "GET": {
      "description": "serves an array of all users",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "users": [
          {
            "username": "johnsmith",
            "name": "john",
            "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
          }
        ]
      }
    }
  },
  "/api/users/:username": {
    "GET": {
      "description": "Serves a JSON object with the requested user",
      "queries": [],
      "responseCode": 200,
      "exampleResponse": {
        "user": {
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      }
    }
  }
}
